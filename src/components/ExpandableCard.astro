---
const { title, img, desc, badge, subtitle } = Astro.props;
import { Image } from "astro:assets";
const hasBullet = typeof desc === "object" && Array.isArray(desc.points);
---

<!-- Alpine.js for expand/collapse -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<div
  x-data="{ expanded: false }"
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%] overflow-hidden w-[46rem]"
>
  <div
    class="hero-content flex-col md:flex-row items-start cursor-pointer"
    @click="expanded = !expanded"
  >
    {img && (
      <Image
        src={img}
        width={750}
        height={422}
        format="webp"
        alt={title}
        class="max-w-full md:max-w-[13rem] rounded-lg mb-2 md:mb-0 md:mr-4"
      />
    )}
    <div class="grow w-full">
      <h1 class="text-xl font-bold">
        {title}
        {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
      </h1>

      {subtitle && <p class="text-sm text-gray-500">{subtitle}</p>}

      <!-- Expanded section -->
      <div x-show="expanded" x-transition class="mt-2 text-1xl">
        {desc?.text && <p>{desc.text}</p>}

        {desc?.points && (
          <ul class="list-disc list-inside mt-2">
            {desc.points.map((point) => (
              <li>{point}</li>
            ))}
          </ul>
        )}

        {desc?.links && (
            <div class="mt-2 flex flex-wrap gap-2">
                {desc.links.map((link) => (
                <a
                    href={link.url}
                    target="_blank"
                    class="text-blue-600 underline"
                >
                    {link.text}
                </a>
                ))}
            </div>
        )}

        {desc?.pdf && (
            <div class="mt-4">
                <a 
                href={desc.pdf} 
                target="_blank" 
                class="text-blue-600 underline"
                >
                ðŸ“„ View Full PDF
                </a>
            </div>
        )}

        {desc?.video && (
            <div class="mt-4">
                <video 
                src={desc.video} 
                controls 
                class="w-full rounded-lg"
                >
                Your browser does not support the video tag.
                </video>
            </div>
        )}
      </div>
    </div>
  </div>
</div>