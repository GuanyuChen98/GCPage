const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base" id="home" href="/GCPage/">Home</a></li>
    <li><a class="py-3 text-base" id="background" href="/GCPage/background">Background</a></li>
